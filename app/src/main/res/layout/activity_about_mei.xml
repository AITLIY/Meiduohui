<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/app_bg"
    tools:context=".UI.activitys.mine.AboutMeiActivity">

    <!--标题栏-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/app_title_bar2">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="9dp"
            android:src="@drawable/icon_tab_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="关于我们"
            android:textColor="@color/black"
            android:textSize="@dimen/title_bar_text"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/text_default"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="206dp"

        android:background="@drawable/icon_bg_about">

        <ImageView
            android:id="@+id/icon_mei"
            android:layout_width="87dp"
            android:layout_height="87dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="43dp"
            android:src="@drawable/icon_tab_about"/>

        <TextView
            android:id="@+id/tv_mei"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/icon_mei"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp"
            android:text="美好生活 优惠多多"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="90dp"
            android:layout_height="17dp"
            android:layout_below="@+id/tv_mei"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="v1.03(003)"
            android:textSize="8sp"
            android:textColor="@color/text_default"
            android:background="@drawable/shape_ring_gray"/>

    </RelativeLayout>

</LinearLayout>