<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/translucence_bg">

        <LinearLayout
            android:id="@+id/ll_qr_code"
            android:layout_width="320dp"
            android:layout_height="330dp"
            android:layout_centerInParent="true"
            android:background="@drawable/icon_bg_make_money"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="商家通用券"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_shop_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="店铺名称"
                android:textColor="@color/orange2"
                android:textSize="12sp"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/iv_qr_code"
                android:layout_width="190dp"
                android:layout_height="190dp"
                android:layout_marginTop="20dp"
                android:scaleType="centerCrop"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="请将二维码展示给商家进行使用"
                android:textColor="@color/text_general"
                android:textSize="12sp"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignRight="@+id/ll_qr_code"
            android:layout_above="@+id/ll_qr_code"
            android:layout_marginBottom="10dp"
            android:src="@drawable/icon_tab_close"/>
    </RelativeLayout>

</LinearLayout>