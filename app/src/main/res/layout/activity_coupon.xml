<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:orientation="vertical"
    tools:context=".UI.activitys.mine.CouponActivity">

    <!--标题栏-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/app_title_bar">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="9dp"
            android:src="@drawable/icon_tab_back" />

        <TextView
            android:text="商家卡券"
            style="@style/app_title_text"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--优惠券列表-->
        <com.handmark.pulltorefresh.library.PullToRefreshListView
            android:visibility="visible"
            android:id="@+id/ptr_coupon_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@null">
        </com.handmark.pulltorefresh.library.PullToRefreshListView>

        <!--获取为空或者失败-->
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/not_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="66dp"
                android:layout_height="58dp"
                android:src="@drawable/icon_bg_login_top"/>
            <TextView
                android:id="@+id/not_data_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="您没有任何课程信息~"/>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>