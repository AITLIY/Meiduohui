<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:tools="http://schemas.android.com/tools"
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:background="@color/app_bg"
     tools:context="com.meiduohui.groupbuying.UI.fragments.home.CouponFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/app_title_bar"/>

        <!--标题栏-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@color/app_title_bar">

            <TextView
                android:text="我的卡券"
                style="@style/app_title_text"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/app_title_bar">

            <RelativeLayout
                android:id="@+id/unused_rl"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/unused_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="未使用"
                    android:textColor="@color/black"/>

                <View
                    android:id="@+id/unused_v"
                    android:layout_width="50dp"
                    android:layout_height="2dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:background="@color/black"
                    android:visibility="visible"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/used_rl"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/used_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="已使用"
                    android:textColor="@color/text_general"/>

                <View
                    android:id="@+id/used_v"
                    android:layout_width="50dp"
                    android:layout_height="2dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:background="@color/black"
                    android:visibility="gone"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/expired_rl"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/expired_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="已过期"
                    android:textColor="@color/text_general"/>

                <View
                    android:id="@+id/expired_v"
                    android:layout_width="50dp"
                    android:layout_height="2dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:background="@color/black"
                    android:visibility="gone"/>
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!--优惠券列表-->
            <com.handmark.pulltorefresh.library.PullToRefreshListView
                android:visibility="visible"
                android:id="@+id/ptr_coupon_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@null">
            </com.handmark.pulltorefresh.library.PullToRefreshListView>

            <!--获取为空或者失败-->
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/not_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="66dp"
                    android:layout_height="58dp"
                    android:src="@drawable/icon_bg_default_img"/>
                <TextView
                    android:id="@+id/not_data_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="空~"/>
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/rv_invite"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/translucence_bg">

        <LinearLayout
            android:id="@+id/ll_qr_code"
            android:layout_width="320dp"
            android:layout_height="330dp"
            android:layout_centerInParent="true"
            android:background="@drawable/icon_bg_make_money"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="商家通用券"
                android:textColor="@color/black"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/tv_shop_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="店铺名称"
                android:textColor="@color/orange2"
                android:textSize="12sp"/>

            <ImageView
                android:id="@+id/iv_qr_code"
                android:layout_width="188dp"
                android:layout_height="188dp"
                android:layout_marginTop="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="请将二维码展示给商家进行使用"
                android:textColor="@color/text_general"
                android:textSize="12sp"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignRight="@+id/ll_qr_code"
            android:layout_above="@+id/ll_qr_code"
            android:layout_marginBottom="10dp"
            android:src="@drawable/icon_tab_close"/>
    </RelativeLayout>

</FrameLayout>
